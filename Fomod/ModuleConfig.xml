<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Requiem - Minor Arcana</moduleName>
	<installSteps order="Explicit">
		<installStep name="Requiem - Minor Arcana">
			<optionalFileGroups order="Explicit">
				<group name="Modules" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="Roleplaying Improvements">
							<description>Various indispensable roleplaying improvements.
							</description>
							<image path="Fomod\screenshots.jpg"/>
							<files>
								<folder source="Roleplaying Improvements" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
						<plugin name="Healing Poultice">
							<description>Healing poultices can be made with mead as well. Alchemy level 30 or greater reduces floral ingredients by one, Catalysis by another one. The note is rewritten to fit on a single page.
							</description>
							<image path="Fomod\screenshots.jpg"/>
							<files>
								<folder source="Healing Poultice" destination=""/>
							</files>
							<typeDescriptor>
								<type name="Optional"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>